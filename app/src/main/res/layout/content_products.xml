<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/productImage_IV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/productName_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:padding="3dp"
                android:text="Name: ">
            </TextView>

            <TextView
                android:id="@+id/productName_TV"
                android:layout_toRightOf="@+id/productName_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:padding="3dp">
            </TextView>

            <TextView
                android:id="@+id/productPrice_TV1"
                android:layout_below="@+id/productName_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="3dp"
                android:text="Price: ">
            </TextView>

            <TextView
                android:id="@+id/productPrice_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productName_TV1"
                android:layout_toRightOf="@+id/productPrice_TV1"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="3dp">
            </TextView>

            <TextView
                android:id="@+id/productCompanyName_TV1"
                android:layout_below="@+id/productPrice_TV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="3dp"
                android:text="Company: ">
            </TextView>

            <TextView
                android:id="@+id/productCompanyName_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/productCompanyName_TV1"
                android:layout_below="@+id/productPrice_TV"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="3dp">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>